<%if @articles.present?%>
<h2>Articles</h2>
<% @articles.each do |article| %>
  <div class="post_wrapper">
<%= article.name %>
<%= article.description %>
<%= article.reporter %>
<%= link_to "Edit",edit_article_path(article), :class => "btn btn-info" %>
<%= link_to "Show",article_path(article), :class => "btn btn-success" %>
<%= link_to "Delete",article_path(article),:method =>:delete, :data=>{:confirm=>"are you sure"}, :class => "btn btn-danger"%>
<%end%>
</div>
<%else %>
No Articles
<%end%>
<br/>
<%= link_to "New", new_article_path, :class => "btn btn-default" %>